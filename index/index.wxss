.intro {
  margin: 30px;
  text-align: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.time-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0px 10px 0px;
}

.time {
  color: #626262;
  font-size: 30px;
  font-weight: 300;
  margin-left: 10px;
}

.subscribe-icon {
  margin-bottom: 4px;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5555;
  background-color: rgba(0, 0, 0, .5);
  background-color: var(--overlay-background-color, rgba(0, 0, 0, .5));
  -webkit-transition-duration: 300ms;
  transition-duration: 300ms;
}